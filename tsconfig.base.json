{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noPropertyAccessFromIndexSignature": false,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@ng-pack/core/animations": ["libs/core/animations/src/index.ts"],
            "@ng-pack/core/directives": ["libs/core/directives/src/index.ts"],
            "@ng-pack/core/operators": ["libs/core/operators/src/index.ts"],
            "@ng-pack/core/providers": ["libs/core/providers/src/index.ts"],
            "@ng-pack/core/util": ["libs/core/util/src/index.ts"],
            "@ng-pack/shared/assets": ["libs/shared/assets/src/index.ts"],
            "@ng-pack/shared/data-access": ["libs/shared/data-access/src/index.ts"],
            "@ng-pack/shared/environments": ["libs/shared/environments/src/index.ts"],
            "@ng-pack/shared/model": ["libs/shared/model/src/index.ts"],
            "@ng-pack/shared/styles": ["libs/shared/styles/src/index.ts"],
            "@ng-pack/shared/util": ["libs/shared/util/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp", "scripts"],
    "ts-node": {
        "files": true,
        "transpileOnly": true,
        "compilerOptions": {
            "types": ["node"],
            "module": "commonjs"
        }
    }
}
